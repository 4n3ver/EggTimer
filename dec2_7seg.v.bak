module dec2_7seg(display, num);
	
	input [3:0] num;
	
	output[6:0] display;
	
	assign display =
			num	== 0 ? 7'b1000000 :
			num	== 1 ? 7'b06 :
			num	== 2 ? 7'h5b :
			num	== 3 ? 7'h4f :
			num	== 4 ? 7'h66 :
			num	== 5 ? 7'h6d :
			num	== 6 ? 7'h7d :
			num	== 7 ? 7'h07 :
			num	== 7 ? 7'h7f :
			num	== 9 ? 7'h6f :
			7'bxxxxxxx;			//	Output	is	a	don't	care	if	illegal	input
			
endmodule